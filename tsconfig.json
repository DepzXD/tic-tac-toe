{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "target": "ES2019",
    "module": "commonjs",
    "jsx": "react",
    "noImplicitAny": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
